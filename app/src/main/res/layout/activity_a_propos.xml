<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".Controlleur.AboutActivity"
    android:layout_gravity="center"
    android:padding="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/saisie_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A prpops"
            android:textStyle="bold"
            android:textSize="40sp"
            android:textAllCaps="true"
            android:textColor="@color/material_on_background_emphasis_high_type"
            android:layout_marginTop="20dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/material_on_background_emphasis_high_type"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/listePraticiens"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Liste des enseignants :"
            android:textColor="@color/material_on_background_emphasis_high_type"
            android:textSize="18sp"
            android:textAlignment="textStart" />
        <Spinner
            android:id="@+id/spinListPraticiens"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_background_custom"
            android:layout_marginTop="20dp"
            android:spinnerMode="dropdown" />

    </LinearLayout>

</ScrollView>